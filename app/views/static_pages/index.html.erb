<div class = "container">
  <a href="#quizModal" class= "startButton">Start Quiz</a> 
  <div id="quizModal" class="quizDialog"> 
    <div>
      <a href="#close" title="Close" class="close">X</a>
      <p class='question' id='<%= @question.id %>'><%= @question.body %></p>
      <ul>
        <li class='answer' id='<%= @first["#{@question.parameter}"] %>'>
          <%= @first.name %> (@<%= @first.username %>)
        </li>
        <li class='answer' id='<%= @second["#{@question.parameter}"] %>'>
          <%= @second.name %> (@<%= @second.username %>)
        </li>
      </ul>
    </div>  
  </div>
  <table class='scoreboard'>
    <tr>
      <th>User</th>
      <th>Score</th>
    </tr>
    <% @users.each do |u| %>
    <tr>
      <td><%= u.email %></td>
      <td><%= u.score %></td>
    </tr>
  <% end %>
  </table>
</div>     

<p class='user' id='<%= current_user.id %>'></p>

<script type="text/javascript">
  var attr = '<%= @question.parameter %>'
  console.log(attr);
  switch(attr) {
    case 'followers_count':
      most('followers_count');
      break;
    case 'friends_count':
      most('friends_count');
      break;
    case 'statuses_count':
      most('statuses_count');
      break;
    case 'creation_date':
      oldestTweeter('creation_date');
      break;
  }

  function next() {
    var questionId = '<%= @question.id %>';
    var questionBody = '<%= @question.body %>';
    $('#next').on('click', function(event){
      event.preventDefault();
      console.log(questionId, questionBody)
      $('.question').attr('id', questionId);
      $('.question').html(questionBody);
    });
  }
</script>